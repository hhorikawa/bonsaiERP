- content_for :links do
  %ul.breadcrumbs.span6


  %ul.span6.breadcrumbs.r
    %a#help.dark(href='javascript:;')
      %i.icon-question-sign
      Help

.row-fluid
  .span6
    %h1.ib Product/Item Master
    = search_tag
  .span6.r.buttons
    %tags(model='Item' tag-ids='#{ tag_ids }' url='#{ items_path }')

    = link_to "New Item...", new_item_path, class: 'btn btn-secondary'
      

%ul.unstyled.inline
  %li
    = link_to "All", items_path, class: params_bold(:all)
  %li
    = link_to "Sales", items_path(for_sale: true), class: param_bold_for(:for_sale, 'true')
  %li
    = link_to "No Sale", items_path(for_sale: false), class: param_bold_for(:for_sale, 'false')
  %li
    = link_to "Visibles", items_path(active: true), class: param_bold_for(:active, 'true')
  %li
    = link_to "Invisibles", items_path(active: false), class: param_bold_for(:active, 'false')

= render 'search'

- paginate_html = paginate @items

= paginate_html

-# cache [organisation_name, @items] do
%ul#items-list.unstyled.listing.has-row-check
  =render @items

= paginate_html

= render 'index_tour'
