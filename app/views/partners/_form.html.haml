
= @partner.errors.inspect
= bonsai_form_error(f)

= f.text_field :matchcode, label: 'matchcode:',
        input_html: { class: 'matchcode span11' }
= f.text_field :name
= f.email_field :email, lanel: "E-mail:", input_html: { class: 'span11' }

= f.text_field :phone, label: "Phone:", input_html: {size: 20}

= f.text_field :mobile, label: "Mobile:", input_html: {size: 20}

= f.text_field :tax_number, label: 'Tax Number:'

= f.text_field :address, input_html: {rows: 3, cols: 45}, label: 'Address:'

= f.form_group label:{text:"Kind:"}, layout: :horizontal do
  = f.check_box :client #, add_control_col_class:"form-check-inline"
  = f.check_box :supplier #, add_control_col_class:"form-check-inline"
  = f.check_box :staff #, add_control_col_class:"form-check-inline"

