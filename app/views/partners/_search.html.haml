.input-append.search
  = form_tag '/contacts', method: 'get', class: 'form-inline' do
    = text_field_tag 'search', '', placeholder: 'Name, email o Phone'
    = submit_tag 'Buscar', class: 'btn'


:javascript
  $(function() {
    $('#search').autocomplete({
      source: '/contacts',
      select: function(e, ui) {
        window.location = '/contacts/' + ui.item.id
      }
    });
  })
