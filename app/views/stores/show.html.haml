
- @page_title = "Store: " + @store.name

- content_for :links do
  %ul.breadcrumbs
    %li
      = link_to "店", stores_path

.row-fluid
  .span6
    .clear-both
    .row-fluid
      .span4
        = @store.phone
      .span8
        = nl2br @store.address

  .span6.r
    .btn-group

      = link_to "Edit...", edit_store_path(@store.id), class: 'btn'

      = button_to icon_delete_text, store_path(@store.id), method: :delete,
                data:{turbo_confirm: "Esta seguro de borrar el almacen?"}, class: 'btn'

- if @store.active
  %h2 In-Store Operations

  %ul
    %li= link_to "Goods Receipt PO", {controller:"goods_receipt_pos", action:"index", store_id: @store.id} 

    %li In-Store Sales w/o order  ● TODO: impl.
    %li
      = link_to "New Sales Order...", new_sales_order_path 
    %li
      = link_to "Transfer Stock - In...", new_inventory_in_path 
    %li
      = link_to "Transfer Stock - Out...", new_inventory_out_path 

%hr

%ul#tabs.nav.nav-pills.fs150
  %li
    %a(href='#items-tab' data-toggle='tab') Items

  %li
    %a(href='#operations-tab' data-toggle='tab') Operaciones



:javascript
  $(function() {
    activeTab();

    $('#operations-tab .pagination a').each(function() {
      $a = $(this);
      $a.attr('href', $a.attr('href') + '#operations-tab');
    });

  })
