
-# @param @order sales_order or purchase_order

#items
  %h2 Items

  %table.table
    %thead
      %tr
        %th Item
        %th Precio <br/>unitario #{@order.currency}
        %th Cantidad
        %th Unidad
        -#%th Disponible Inventario<br/>Total
        %th Total fila #{@order.currency}

      - @order.details.includes(:item => [:unit, :stocks]).each do |det|
        %tr
          %td= link_to det.item, det.item, 'data-title' => det.item
          -#%td.cur= price_change det
          %td.cur= ntc det.quantity
          %td.cur= det.item.unit
          -#%td.cur= ntc det.item.total_stock
          %td.total_row.cur= ntc det.line_total

    %tr.extra.pad_top
      %td
      %td.cur{:colspan => 3} Subtotal
      %td#subtotal.cur= ntc @order.gross_total

    %tr.extra
      %td
      %td.cur{:colspan => 3}
        %i.icon-minus-sign
        Descuento (<span id="discount_percentage" data-val="#{@order.discount_percent}">#{ntc @order.discount_percent}</span>%)
      %td#discount_total.cur= ntc -@order.total_discount

    %tr.extra
      %td
        %td.cur.b.dark{:colspan => 3} Total
      %td#total_value.cur.b{'data-val' => @order.total} #{@order.currency} #{ntc @order.total}


