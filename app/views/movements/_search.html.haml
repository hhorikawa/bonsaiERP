
-# @param @search search object

.search
  = bootstrap_form_with model: @search, url:{action:"index"}, method: "get", layout: :inline  do |f|
    %div.row
      = f.text_field :search, hide_label: true, placeholder: t("views.incomes.index.search.search_placeholder"), inline: true

      = f.date_field :date_start, label:"From:"
      = f.date_field :date_end, label:"To:"

      -# params = "state"=>{"draft"=>"1", "approved"=>"1", "delivered"=>"1", "void"=>"0"}
      - Order::STATES.each do |st|
        = f.check_box 'state', {multiple:true, label:st, checked: @search.state.include?(st)}, st

      = f.date_field :overdue

    = f.submit "Filter", class: "btn btn-primary"
    = f.submit 'Reset', name:"reset", class: 'btn btn-secondary'
