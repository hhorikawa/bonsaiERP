- content_for :links do
  %ul.breadcrumbs.span6
    %li Cuentas bancarias

.row-fluid
  .span6
    %h1 Cash / Bank Account
  .span6.r
    = link_to "New cash/bank account...", new_cash_path 

%ul#banks.accounts_list
  - @cashes.each do |cash_ac|
    %li.row-fluid
      .span7
        %h4.n
          = cash_ac.account.active
          = link_to cash_ac.account.name, cash_ac

        = link_to new_transference_path(account_id: bank.id), class: 'btn btn-mini' do
          %i.icon-switch
          Nueva transferencia

      .span3
        .moneybox
          %label TOTAL EN CUENTA
          %h5.n
            = ntc cash_ac.account.amount
            = cash_ac.account.currency
