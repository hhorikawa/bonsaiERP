%h1 Organisations

%p= link_to 'New Organisation...', new_organisation_path, :class => 'new'

%ul#organisations_list
  - @organisations.each do |organisation|
    %li
      - if USE_SUBDOMAIN
        = link_to organisation.name, organisation_url(organisation, subdomain: organisation.tenant), :id => organisation.id
      - else
        = link_to organisation.name, organisation_url(organisation), :id => organisation.id

