= simple_form_for inv, url: incomes_inventory_ins_path, html: {id: 'income-inventory-devolution'} do |f|
  = bonsai_form_error(f)

  = hidden_field_tag :store_id, @store.id
  = hidden_field_tag :income_id, @income.id

  .row-fluid
    .span6
      %label 所得
      %h4.n= link_to inv.income, inv.income
    .span6
      %label 店
      %h4.n= link_to inv.store, inv.store, target: '_blank'

  = render 'inventories/devolution_form', f: f, inv: @inv

  .form-actions
    = f.submit '商品の返品', class: 'btn btn-primary b'

:javascript
  $(function() {
    $('#income-inventory-devolution').submit(function(event) {
      if(confirm("Esta segur@ de realizar la devolución de mercadería")) {
        return true
      }else {
        return false
      }
    });
  })
